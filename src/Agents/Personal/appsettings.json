{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "Provider": {
    "Type": "AzureFoundry",
    "Endpoint": "https://azureagent-foundry-resource.openai.azure.com/",
    "ModelName": "gpt-oss-120b",
    "DevUI": true,
    "DevUIPort": 8080
  },
  "Clients": {
    "Weather": {
      "ApiKey": "YOUR_GOOGLE_API_KEY"
    },
    "Gmail": {
      "ClientId": "YOUR_CLIENT_ID.apps.googleusercontent.com",
      "ClientSecret": "YOUR_CLIENT_SECRET"
    }
  },
  "Agents": [
    {
      "Name": "Personal",
      "InstructionsFileName": "Agents/personal.md",
      "Tools": [
        "GetWeatherByZip",
        "GetWeatherByCityState",
        "GetDailyForecastByZip",
        "GetDailyForecastByCityState",
        "GetHourlyForecastByZip",
        "GetHourlyForecastByCityState",
        "GetMail",
        "SearchMail",
        "GetMailContents"
      ]
    }
  ]
}
